<!doctype html>
<html lang="es">

<head>
  <title>Random Video Player</title>
  <meta http-equiv="content-type" content="text/html;charset=utf-8" />

  <link href="//vjs.zencdn.net/4.10/video-js.css" rel="stylesheet">

  <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
  <script src="//vjs.zencdn.net/4.10/video.js"></script>
</head>
<body>
  <h1>&Iacute;ndice</h1>

  <div>
    <a href="/random">Video al azar</a>
  </div>
  <div>
    <form>
      <label for="season">Temporada</label>
      <input type="number" name="season" required />

      <label for="episode">Episodio</label>
      <input type="number" name="episode" required />

      <button>Ir</button>
    </form>
  </div>

  <script type="text/javascript">
    $("form").submit(function(evt){
      var season = $("input[name='season']").val();
      var episode = $("input[name='episode']").val();

      window.location = '/' + season + '/' + episode;
      evt.preventDefault();
    });
  </script>
</body>

</html>
